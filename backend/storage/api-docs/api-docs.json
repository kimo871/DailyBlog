    "components": {
        "schemas": {
            "ErrorResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "error"
                    },
                    "message": {
                        "type": "string",
                        "example": "An error occurred"
                    },
                    "errors": {
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "SuccessResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "message": {
                        "type": "string",
                        "example": "Operation successful"
                    },
                    "data": {
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "LoginRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "maxLength": 255,
                        "example": "mohamed@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "minLength": 8,
                        "example": "password123"
                    }
                },
                "type": "object"
            },
            "RegisterRequest": {
                "required": [
                    "name",
                    "email",
                    "password",
                    "password_confirmation"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Mohamed Kamal"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "maxLength": 255,
                        "example": "mohamed@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "minLength": 8,
                        "example": "password123"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "format": "password",
                        "example": "password123"
                    },
                    "image": {
                        "description": "Profile image (optional)",
                        "type": "string",
                        "format": "binary"
                    }
                },
                "type": "object"
            },
            "CreateCommentRequest": {
                "required": [
                    "body"
                ],
                "properties": {
                    "body": {
                        "type": "string",
                        "example": "This is the comment"
                    }
                },
                "type": "object"
            },
            "UpdateCommentRequest": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CreateCommentRequest"
                    },
                    {
                        "properties": {
                            "body": {
                                "type": "string",
                                "example": "This is the comment"
                            }
                        },
                        "type": "object"
                    }
                ]
            },
            "CreatePostRequest": {
                "required": [
                    "title",
                    "body",
                    "tags"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "My First Post"
                    },
                    "body": {
                        "type": "string",
                        "example": "This is the content of my post"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "laravel"
                        }
                    }
                },
                "type": "object"
            },
            "UpdatePostRequest": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CreatePostRequest"
                    },
                    {
                        "properties": {
                            "title": {
                                "type": "string",
                                "example": "Updated Post Title"
                            },
                            "body": {
                                "type": "string",
                                "example": "Updated content"
                            },
                            "tags": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "updated"
                                }
                            }
                        },
                        "type": "object"
                    }
                ]
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
